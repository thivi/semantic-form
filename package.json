{
    "name": "@wso2is/forms",
    "version": "0.9.1",
    "description": "Forms module for WSO2 Identity Server web-apps.",
    "keywords": [
        "WSO2",
        "WSO2 IS",
        "WSO2 Identity Server",
        "WSO2 Identity Apps",
        "form"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run clean && npm run compile",
        "clean": "rimraf ./dist",
        "compile": "tsc -p tsconfig.json",
        "lint": "tslint -t stylish --project .",
        "test": "jest"
    },
    "author": "WSO2",
    "license": "Apache-2.0",
    "jest": {
        "transform": {
            "^.+\\.tsx$": "ts-jest",
            "^.+\\.ts$": "ts-jest",
            "^.+\\.js$": "babel-jest",
            "^.+\\.jsx$": "babel-jest"
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test-configs/file-mock.js",
            "\\.(css|less)$": "<rootDir>/test-configs/style-mock.js"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/test-configs/setup-test.ts"
        ]
    }
}
